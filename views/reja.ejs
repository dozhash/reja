<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Reja</title>

    <link
      rel="icon"
      type="image/png"
      href="https://img.freepik.com/premium-photo/plan-3d-rendering-isolated-calendar-with-organization-chart_519469-3354.jpg?semt=ais_hybrid&w=740&q=80"
    />

    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <body style="background-color: #b8bbd1">
    <div class="container mt-5">
      <h1 class="display-4 text-center py-3">REJA VA MAQSADLAR</h1>

      <div class="jumbotron p-3 shadow-sm bg-white rounded">
        <form id="create-form" action="/create-item" method="POST">
          <div class="d-flex align-items-center">
            <!-- Input -->
            <input
              id="create-field"
              name="reja"
              type="text"
              class="form-control mr-3"
              placeholder="Yangi reja kiriting..."
              autocomplete="off"
              autofocus
              style="flex: 1"
            />

            <!-- Button -->
            <button
              class="btn btn-primary"
              style="border-radius: 20px; margin-left: 10px"
            >
              Yangi Reja Qoshish
            </button>
          </div>
        </form>
      </div>

      <ul id="item-list" class="list-group pt-4">
        <% items.map(function(item) { %>
        <li
          class="list-group-item list-group-item-info d-flex align-items-center justify-content-between"
        >
          <span class="iten-text"><%= item.reja %></span>
          <div>
            <button
              data-id="<%= item._id %>"
              class="edit-me btn btn-secondary btn-sm mr-1"
            >
              O'zgartirish
            </button>

            <button
              data-id="<%= item._id %>"
              class="delete-me btn btn-danger btn-sm"
            >
              O'chirish
            </button>
          </div>
        </li>
        <% }) %>
      </ul>

      <button
        id="clean-all"
        class="btn btn-danger"
        style="border-radius: 20px; margin-top: 30px"
      >
        Hammasini O'chirish
      </button>
    </div>
  </body>

  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"
  ></script>

  <script src="https://unpkg.com/axios/dist/axios.min.js"></script>

  <script src="/browser.js"></script>
</html>
